    <script>
        async function getLocation(){
            let getloc = await fetch("/department",{method:"POST"})
            let getLocData = await getloc.json()
            console.log(getLocData)
            let count = 6
            getLocData.forEach(element => {
                document.getElementById("LocationContainer").innerHTML += `
                <div class="containercard">
                    <div class="leftContainerCard">
                     <ol>       
                    <h2>${element.DEPT_NAME}</h2><br>
                    Department ID : <strong>${element.DEPT_ID}</strong><br>
                    Land Line no : <strong>${element.LAND_LINE_NUM}</strong><br>
                    Numbers Of officers : <strong>${element.NUMBER_OF_OFFICERS}</strong><br>
                    Postal Code : <strong>${element.POSTAL_CODE}</strong><br>
                    City ID : <strong>${element.CITY_ID}</strong>
                    </ol>
                </div>
                <div class="rightContainerCard">
                  <img src="images/${count}.png" alt="error" width="100%" height="100%">
                </div>
              </div>
                `
                count+=1
            });
        }
        getLocation()
    </script>
