    margin: 0;
  }
  #panelName{
    color: red;
    animation-name: colorchange;
    animation-duration: 2s;
    animation-iteration-count: infinite;
    animation-direction: alternate;
    animation-timing-function: ease-in;
}
@keyframes colorchange{
    0%{color: red;}
    25%{color: red;}
    50%{color: red;}
    75%{color: blue;}
}
